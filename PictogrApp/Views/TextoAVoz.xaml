<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PictogrApp.Views.TextoAVoz">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#0c4c8a" Padding="10" CornerRadius="0">
                <Label Text="Texto a Voz" 
                   HorizontalTextAlignment="Start" 
                   TextColor="White" 
                   FontSize="22"
                   FontAttributes="Bold" HorizontalOptions="Center"/>
            </Frame>

            <Entry x:Name="TxtSpeech" Placeholder="Escribí lo que quieras decir" PlaceholderColor="DarkGray" TextColor="Black"/>
            <Button x:Name="BtnSpeech" Text="Vocalizar" Clicked="BtnSpeech_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>