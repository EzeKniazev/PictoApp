                                         WidthRequest="200" HeightRequest="200" HorizontalOptions="Start" Clicked="BtnSoriano_Clicked">
                            </ImageButton>

                            <ImageButton Grid.Row="0" Grid.Column="1" x:Name="BtnTacuarembo" CornerRadius="15" BackgroundColor="#97d5e0" Source="Tacuarembo.png"
                                         WidthRequest="200" HeightRequest="200" HorizontalOptions="Start" Clicked="BtnTacuarembo_Clicked">
                            </ImageButton>

                        </Grid>
                        <Grid Margin="30,20" RowSpacing="20">

                            <ImageButton Grid.Row="0" Grid.Column="0" x:Name="BtnTreintaYTres" CornerRadius="15" BackgroundColor="#97d5e0" Source="TreintaYTres.png"
                                         WidthRequest="200" HeightRequest="200" HorizontalOptions="Start" Clicked="BtnTreintaYTres_Clicked">
                            </ImageButton>

                        </Grid>
                    </StackLayout>
                </ScrollView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>