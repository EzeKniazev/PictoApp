                                         WidthRequest="200" HeightRequest="200" HorizontalOptions="Start" Clicked="BtnMaldonado_Clicked">
                            </ImageButton>

                            <ImageButton Grid.Row="0" Grid.Column="1" x:Name="BtnMontevideo" CornerRadius="15" BackgroundColor="#97d5e0" Source="Montevideo.png"
                                         WidthRequest="200" HeightRequest="200" HorizontalOptions="Start" Clicked="BtnMontevideo_Clicked">
                            </ImageButton>

                        </Grid>
                        <Grid Margin="30,20" RowSpacing="20">

                            <ImageButton Grid.Row="0" Grid.Column="0" x:Name="BtnPaysandu" CornerRadius="15" BackgroundColor="#97d5e0" Source="Paysandu.png"
                                         WidthRequest="200" HeightRequest="200" HorizontalOptions="Start" Clicked="BtnPaysandu_Clicked">
                            </ImageButton>

                            <ImageButton Grid.Row="0" Grid.Column="1" x:Name="BtnRioNegro" CornerRadius="15" BackgroundColor="#97d5e0" Source="RioNegro.png"
